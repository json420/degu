#!/usr/bin/make -f

%:
	dh $@ --with=python3 --with=sphinxdoc


override_dh_auto_clean:
	rm -rf build/ doc/_build/
	rm -f degu/_base.cpython-*m.so

override_dh_auto_build:
	sphinx-build -EW -b html doc/ doc/_build/html/
	set -ex; for python in $(shell py3versions -r); do \
		$$python setup.py build \
				--executable=/usr/bin/python3; \
	done

override_dh_auto_test:
	set -ex; for python in $(shell py3versions -r); do \
		$$python setup.py test; \
		DEGU_INSTRUMENT_BUILD=true scan-build --status-bugs -analyze-headers \
			$$python setup.py build_ext -i; \
		$$python -c "from degu import _base"; \
		$$python setup.py test; \
	done

override_dh_auto_install:
	set -ex; for python in $(shell py3versions -r); do \
		$$python setup.py install \
				--install-layout=deb \
				--root=$(CURDIR)/debian/python3-degu; \
	done

override_dh_sphinxdoc:
ifneq "$(shell dh_listpackages | grep -- -doc)" ""
	dh_sphinxdoc
endif
